{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "visualisation of sleep pattern",
  "width": 800,
  "height": 320,
  "layer": [
    {
      "data": {
        "url": "http://beautiful-data.herokuapp.com/api/users/1"
      },
      "layer": [
        {
          "mark": "line",
          "encoding": {
            "x": {
              "timeUnit": "hoursminutesseconds",
              "field": "stressdata.emotion",
              "type": "ordinal",
              "axis": {
                "title": "Timestamp"
              }
            },
            "y": {
              "field": "heartdata.bpm",
              "type": "quantitative"
            }
          }
        }
      ]
    },
    {
      "data": {
        "values": [
          {
            "ThresholdValue": 100,
            "Threshold": "High heartrate, when in rest"
          }
        ]
      },
      "layer": [
        {
          "mark": "rule",
          "encoding": {
            "y": {
              "field": "ThresholdValue",
              "type": "quantitative"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": -2,
            "dy": -4
          },
          "encoding": {
            "x": {
              "value": "width"
            },
            "y": {
              "field": "ThresholdValue",
              "type": "quantitative",
              "axis": {
                "title": "BPM"
              }
            },
            "text": {
              "field": "Threshold",
              "type": "ordinal"
            }
          }
        }
      ]
    }
  ]
}
